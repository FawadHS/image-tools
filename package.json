{
  "name": "@fawadhs/image-tools",
  "version": "2.6.6",
  "description": "Privacy-first image conversion and editing React component. Convert HEIC, JPEG, PNG to WebP with crop, rotate, filters, and text overlay tools.",
  "author": "Fawad Hussain <fawad@fawadhs.dev>",
  "license": "MIT",
  "homepage": "https://tools.fawadhs.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/FawadHS/image-tools.git"
  },
  "bugs": {
    "url": "https://github.com/FawadHS/image-tools/issues"
  },
  "keywords": [
    "react",
    "image",
    "conversion",
    "heic",
    "webp",
    "jpeg",
    "png",
    "avif",
    "image-editor",
    "crop",
    "rotate",
    "filters",
    "watermark",
    "component",
    "privacy-first",
    "client-side"
  ],
  "main": "./dist-lib/image-tools.umd.js",
  "module": "./dist-lib/image-tools.es.js",
  "types": "./dist-lib/src/lib/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist-lib/src/lib/index.d.ts",
        "default": "./dist-lib/image-tools.es.js"
      },
      "require": {
        "types": "./dist-lib/src/lib/index.d.ts",
        "default": "./dist-lib/image-tools.umd.js"
      }
    },
    "./styles": "./dist-lib/image-tools.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist-lib",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "vite build --mode lib && tsc --project tsconfig.lib.json && node scripts/prepare-npm.js",
    "pack:test": "npm pack --pack-destination ./test-package",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm test && npm run test:e2e",
    "prepublishOnly": "npm run build:lib"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "heic2any": "^0.0.4",
    "jszip": "^3.10.1",
    "lucide-react": "^0.294.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-dropzone": "^14.2.3",
    "react-helmet-async": "^2.0.5",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^7.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.1",
    "ts-jest": "^29.4.6",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5"
  }
}
